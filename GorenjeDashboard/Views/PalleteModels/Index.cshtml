@model IEnumerable<GorenjeDashboard.Models.PalleteModel>

@{
    ViewBag.Title = "Palete";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PalleteName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PalleteName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PalleteId }) |
            @Html.ActionLink("Details", "Details", new { id=item.PalleteId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PalleteId })
        </td>
    </tr>
}

</table>
