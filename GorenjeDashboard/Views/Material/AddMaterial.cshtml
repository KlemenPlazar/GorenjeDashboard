@model GorenjeDashboard.Models.OrderModel
    
@{
    ViewBag.Title = "Dodaj naročilo";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">@ViewBag.Title</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<!-- Tabela v čakanju -->
<div class="panel panel-default">
    <div class="panel-heading">
        <i class="fa fa-bar-chart-o fa-fw"></i> Material
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="container">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            
            <form>
                <div class="form-group row">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Ime Priimek" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => model.MaterialId, "Material", htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.DropDownList("MaterialId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MaterialId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => model.PalleteId, "Palete", htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.DropDownList("PalleteId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.PalleteId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => model.MachineId, "Stroj", htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.DropDownList("MachineId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MachineId, "", new { @class = "text-danger" })
                    </div>
                </div>
               
                <input type="hidden" id="Priority" name="Priority" />
                <div class="form-group row">
                    @Html.LabelFor(model => model.Priority, "Prioriteta", htmlAttributes: new { @class = "col-sm-2 col-form-label", id = "Priority" })
                    <div class="col-sm-10">
                        <div class="btn-group">
                            <button type="button" class="btn btn-primary priority">Čim hitreje</button>
                            <button type="button" class="btn btn-primary priority">< 10 minut</button>
                            <button type="button" class="btn btn-primary priority">< 30 minut</button>
                            <button type="button" class="btn btn-primary priority">> 30 minut</button>
                        </div>
                        @Html.ValidationMessageFor(model => model.Priority, "", new { @class = "text-danger" })
                    </div>
                </div>
                <button type="submit" value="Create" class="btn btn-primary">Dodaj</button>
            </form>
        }
        </div>
        <!-- /.row -->
    </div>
    <!-- /.panel-body -->
</div>

<script>
    $(document).ready(function () {
        $(".priority").click(function () {
            $("#Priority").val($(this).html());
        });
    });
</script>